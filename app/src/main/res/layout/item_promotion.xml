<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="promotionbean"
            type="com.example.admin.quwang.bean.PromotionListBean"></variable>
    </data>
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="200dp">
        <ImageView
            android:src="@{promotionbean.img_url}"
            android:layout_width="110dp"
            android:layout_height="130dp" />
        <TextView
            android:layout_marginTop="5dp"
            android:lines="2"
            android:textColor="#aaa"
            android:text="@{promotionbean.goods_name}"
            android:layout_width="110dp"
            android:layout_height="wrap_content" />
     <TextView
            android:layout_marginTop="5dp"
            android:textColor="#d84f48"
            android:text="@{@string/price+promotionbean.app_price}"
            android:layout_width="110dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

</layout>